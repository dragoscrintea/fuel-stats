{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "type": "object",

    "post_request": {
        "type": "object",
        "properties": {
            "action_logs": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "node_aid": {"type": "string"},
                        "external_id": {"type": "integer"}
                    },
                    "required": ["node_aid", "external_id"]
                }
            }
        },
        "additionalProperties": false
    },

    "post_response": {
        "type": "object",
        "properties": {
            "status": {"enum": ["ok", "error"]},
            "message": {"type": "string"}
        },
        "required": ["status"]
    }

}